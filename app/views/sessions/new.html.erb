<% provide(:title, "Login") %>

<div class="container">
    <div class="col-sm-8 offset-sm-2">
      <div class="blog-header">
        <div class="container">
          <h1 class="blog-title mb-4">ログイン</h1>
          <p class="lead blog-description">セッションの開始 | 正しいメールアドレスとパスワードを入力してください。</p>
        </div>
      </div>

      <div class="container mt-5 mb-5">
        <%= form_for(:session, url: login_path) do |f| %>

          <div class="form-group row">
            <%= f.label :email, "メールアドレス", class: "col-3 col-form-label" %>
            <div class="col-9">
              <%= f.email_field :email, id: "inputEmail3", class: "form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :password, "パスワード", class: "col-3 col-form-label" %>
            <div class="col-9">
              <%= f.password_field :password, id: "password-input", class: "form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <div class="offset-sm-3 col-sm-9">
              <%= f.label :remember_me, class: "checkbox inline" do %>
                <%= f.check_box :remember_me %>
                <span>ログイン情報を記憶する</span>
              <% end %>
            </div>
          </div>

          <div class="form-group row">
            <div class="offset-sm-3 col-sm-9">
              <%= f.submit "ログイン", class: "btn btn-primary" %>
            </div>
          </div>


        <% end %>

      </div>

    </div>

    <div class="col-sm-4 offset-sm-4 mt-5">
      <p class="mb-0">パスワードをお忘れですか？  <%= link_to "パスワード再発行", new_password_reset_path %></p>
      <p>はじめての方へ  <%= link_to "サインアップ", signup_path %></p>
    </div>

</div>
