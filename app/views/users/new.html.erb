<% provide(:title, "Sign in") %>
<%= render 'header' %>


<div class="container">
    <div class="col-sm-8 offset-sm-2">
      <div class="blog-header">
        <div class="container">
          <h1 class="blog-title">Sign in</h1>
          <p class="lead blog-description">はじめてのかたへ｜アカウントを作成する</p>
        </div>
      </div>

      <div class="container">
        <form action="">
          <div class="form-group row">
            <label for="your_name" class="col-3 col-form-label">お名前</label>
            <div class="col-9">
              <input class="form-control" type="text" placeholder="例）山田太郎" value="" id="your_name">
            </div>
          </div>
          <div class="form-group row">
            <label for="inputEmail3" class="col-sm-3 col-form-label">メールアドレス</label>
            <div class="col-sm-9">
              <input type="email" class="form-control" id="inputEmail3" placeholder="">
            </div>
          </div>
          <div class="form-group row">
            <label for="example-password-input" class="col-3 col-form-label">パスワード</label>
            <div class="col-9">
              <input class="form-control" type="password" value="" id="example-password-input">
            </div>
          </div>
          <div class="form-group row">
            <label for="example-password-confirm-input" class="col-3 col-form-label">パスワード（確認用）</label>
            <div class="col-9">
              <input class="form-control" type="password" value="" id="example-password-confirm-input">
            </div>
          </div>

          <div class="form-group row">
            <div class="offset-sm-3 col-sm-9">
              <button type="submit" class="btn btn-primary" value="登録">登 録</button>
            </div>
          </div>
        </form>
      </div>

    </div>

</div>

<%= render 'footer' %>
