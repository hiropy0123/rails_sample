<% provide(:title, "Sign in") %>
<%= render 'header' %>


<div class="container">
    <div class="col-sm-8 offset-sm-2">
      <div class="blog-header">
        <div class="container">
          <h1 class="blog-title">Sign in</h1>
          <p class="lead blog-description">はじめてのかたへ｜アカウントを作成する</p>
        </div>
      </div>

      <div class="container">
        <%= form_for(@user) do |f| %>


          <div class="form-group row">
            <%= f.label :name, "お名前", class: "col-3 col-form-label" %>
            <div class="col-9">
              <%= f.text_field :name, :placeholder => "例）山田太郎", :id => "your_name", class: "form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :email, "メールアドレス", class: "col-3 col-form-label" %>
            <div class="col-9">
              <%= f.email_field :email, :id => "inputEmail3", class: "form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :password, "パスワード",class: "col-3 col-form-label" %>
            <div class="col-9">
              <%= f.password_field :password, :id => "password-input", class: "form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :password_confirmation, "パスワード（確認用）",class: "col-3 col-form-label" %>
            <div class="col-9">
              <%= f.password_field :password_confirmation, :id => "password-input", class: "form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <div class="offset-sm-3 col-sm-9">
              <%= f.submit "登録", class: "btn btn-primary" %>
            </div>
          </div>


        <% end %>


      </div>

    </div>

</div>

<%= render 'footer' %>
