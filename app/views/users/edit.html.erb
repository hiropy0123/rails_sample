<% provide(:title, "編集") %>

<div class="container">
    <div class="col-sm-8 offset-sm-2">
      <div class="blog-header">
        <div class="container">
          <h1 class="blog-title">編集</h1>
          <p class="lead blog-description"><%= @user.name %> 編集</p>
        </div>
      </div>

      <div class="container">
        <%= form_for(@user) do |f| %>

        <%= render "shared/error_messages" %>


          <div class="form-group row">
            <%= f.label :name, "お名前", class: "col-3 col-form-label" %>
            <div class="col-9">
              <%= f.text_field :name, id: "your_name", class: "form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :email, "メールアドレス", class: "col-3 col-form-label" %>
            <div class="col-9">
              <%= f.email_field :email, id: "inputEmail3", class: "form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :password, "パスワード", class: "col-3 col-form-label" %>
            <div class="col-9">
              <%= f.password_field :password, id: "password-input", class: "form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :password_confirmation, "パスワード（確認用）",class: "col-3 col-form-label" %>
            <div class="col-9">
              <%= f.password_field :password_confirmation, id: "password-input", class: "form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <div class="offset-sm-3 col-sm-9">
              <%= f.submit "保存", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>

        <div class="gravatar_edit">
          <%= gravatar_for @user %>
          <a href="http://gravatar.com/emails" target="_blank">change</a>
        </div>

      </div>
    </div>
</div>
