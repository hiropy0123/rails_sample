<% provide(:title, @user.name) %>
<%= render 'header' %>


<div class="container">
  <figure class="avatar">
    <%= gravatar_for @user, size: 120 %>
  </figure>
  <table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>ユーザー名</th>
      <th>メールアドレス</th>
      <th>登録日時</th>
      <th>更新日時</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row"><%= @user.id %></th>
      <td><%= @user.name %></td>
      <td><%= @user.email %></td>
      <td><%= @user.created_at %></td>
      <td><%= @user.updated_at %></td>
    </tr>
  </tbody>
</table>

</div>

<%= render 'footer' %>
