
<%= form_for(@user) do |f| %>

<%= render "shared/error_messages", object: f.object %>


  <div class="form-group row">
    <%= f.label :name, "お名前", class: "col-3 col-form-label" %>
    <div class="col-9">
      <%= f.text_field :name, id: "your_name", class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :email, "メールアドレス", class: "col-3 col-form-label" %>
    <div class="col-9">
      <%= f.email_field :email, id: "inputEmail", class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, "パスワード", class: "col-3 col-form-label" %>
    <div class="col-9">
      <%= f.password_field :password, id: "password-input", class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, "パスワード（確認用）",class: "col-3 col-form-label" %>
    <div class="col-9">
      <%= f.password_field :password_confirmation, id: "password-input", class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="offset-sm-3 col-sm-9">
      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    </div>
  </div>


<% end %>
